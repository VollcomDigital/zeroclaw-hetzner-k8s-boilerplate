# Root / Docker Compose environment template
# Copy to .env and adjust for local development

# Backend
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# MongoDB (local or cloud)
MONGODB_URI=mongodb://localhost:27017/mean_boilerplate
MONGODB_URI_TEST=mongodb://localhost:27017/mean_boilerplate_test

# Frontend (build-time / dev proxy)
VITE_API_URL=http://localhost:3000/api/v1
NG_API_URL=http://localhost:3000/api/v1

# Security (generate in production)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRES_IN=7d
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=http://localhost:4200

# Logging
LOG_LEVEL=info
